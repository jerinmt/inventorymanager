<!DOCTYPE html>
<html>
    <head>
        <title>Products</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <%- include('frame', {allCategories: allCategories}) %>
        <table>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
            <% for (let i = 0; i < products.length; i++) { %>
            <tr>
                <td><%= products[i].name %></td>
                <td><%= products[i].quantity %></td>
                <td><%= products[i].price %></td>
                <td>
                    <a href="/update/item?itemName=<%= products[i].name %>">Edit</a>
                    <a href="/delete/category?itemName=<%= products[i].name %>">Delete</a>
                </td>
            </tr>
            <% } %>
        </table>
        <footer>There is absolutely no copyright</footer>
    </body>
</html>
